#include<stdio.h>
#define MAX_VET 100

void scambia_int(int *ptra, int *ptrb)
{
	int dep;
	dep=*ptra;
	*ptra=*ptrb;
	*ptrb=dep;

}


void carica_vet(int *vet, int n)
{
	int i;
	
	for(i=0;i<n;i++)
	{
		printf("inserisci un numero \n");
		scanf("%d", &vet[i]);
	}
	
}


void stampa_vet(int *vet, int n)
{
	int i;
	
	for(i=0;i<n;i++)
	{
		printf("%d ", vet[i]);	
	}
	printf("\n");
}


void seleciotn_sort(int *vet, int n)	//dal più piccolo al più grande
{
	int i, posmin, j;
	for(i=0;i<(n-1);i++)
		{
			posmin=i;
			for(j=(i+1);j<n;j++)
			{
				if(vet[j]<vet[posmin])
					posmin=j;
			}
			
		scambia_int(&vet[i], &vet[posmin]);
		}
	
}


int main (){

	int len, numeri[MAX_VET];
	printf("quanti numeri vuoi inserire \n");
	scanf("%d",&len);

	carica_vet(numeri, len);	
	seleciotn_sort(numeri, len);
	stampa_vet(numeri, len);
	
}
